{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
var
  DataAtual : TDate;
  DataEHorasAtuais : TDateTime;
  HoraAtual : TTime;
begin
  DataAtual := Date;
  DataEHorasAtuais := Now;
  HoraAtual := Time;

  ShowMessage(
    DateToStr(DataAtual)+#13+
    DateTimeToStr(DataEHorasAtuais)+#13+
    TimeToStr(HoraAtual)
    );

end;

procedure TForm1.Button2Click(Sender: TObject);
var
   NossaData : TDateTime;
   Ano, Mes, Dia : Word;

   NossaHora : TTime;
   Hora, Minuto, Segundo, Mili : Word;
begin
   NossaData := Date;
   DecodeDate(NossaData, Ano, Mes, dia);

   speAno.Value := Ano;
   speMes.Value := Mes;
   speDia.Value := Dia;

   DecodeTime(NossaData, Hora, Minuto, Segundo, Mili);

   spehora.Value := Hora;
   speMi


end;

end.
