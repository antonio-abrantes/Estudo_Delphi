{$R *.dfm}

procedure TForm1.Edit1Change(Sender: TObject);
var
  num1, num2 : Double;
begin
    if Pos('.', Edit1.Text) > 0 then
      begin

      end else
        if Length(Edit1.Text) > 0 then
        begin
          num2 := 0;
          num1 := StrToFloat(Edit1.Text);
          num2 := num1 * 2;
          Edit2.Text := FloatToStr(num2);
        end;
end;

end.
